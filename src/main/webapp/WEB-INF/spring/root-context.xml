	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"><!-- <bean id="userDAO" class="com.rsrvapp.dao.user.impl.UserDAOImpl"></bean> 
